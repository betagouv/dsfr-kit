# Enforce pnpm usage
engine-strict=true

# Workspace configuration
link-workspace-packages=true
prefer-workspace-packages=true

# Hoisting configuration
# Disable shamefully-hoist to prevent phantom dependencies (packages using deps they don't declare)
shamefully-hoist=false
# Allow hoisting of linters/formatters to root so they can be shared by editor extensions
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*

# Peer dependencies
strict-peer-dependencies=false
auto-install-peers=true

# Performance
prefer-frozen-lockfile=true
